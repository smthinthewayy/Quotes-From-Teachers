<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0"
            prefWidth="700.0" style="-fx-background-color: #000000#000000;" xmlns="http://javafx.com/javafx/18"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="semiotic.QFTController">
    <AnchorPane layoutX="-7.0" layoutY="85.0" prefHeight="322.0" prefWidth="707.0"
                style="-fx-background-color: #F5F5F5#F5F5F5;">
        <TextField fx:id="loginField" layoutX="288.0" layoutY="85.0" promptText="Login">
            <font>
                <Font name="Comic Sans MS" size="13.0"/>
            </font>
        </TextField>
        <PasswordField fx:id="passwordField" layoutX="290.0" layoutY="133.0" promptText="Password">
            <font>
                <Font name="Comic Sans MS" size="13.0"/>
            </font>
        </PasswordField>
        <Button fx:id="singInButton" layoutX="339.0" layoutY="195.0" mnemonicParsing="false" onAction="#userLogIn"
                style="-fx-background-color: #000000;" text="Sign In" textAlignment="CENTER" textFill="WHITESMOKE">
            <font>
                <Font name="Comic Sans MS" size="16.0"/>
            </font>
        </Button>
        <Label alignment="CENTER" layoutX="276.0" prefHeight="78.0" prefWidth="206.0" text="Authorization">
            <font>
                <Font name="Comic Sans MS" size="32.0"/>
            </font>
        </Label>
        <Label fx:id="wrongLogin" alignment="CENTER" contentDisplay="CENTER" layoutX="288.0" layoutY="169.0"
               prefHeight="17.0" prefWidth="178.0" textAlignment="CENTER" textFill="RED"
               textOverrun="CENTER_ELLIPSIS"/>
        <Button fx:id="buttonForgotPassword" layoutX="329.0" layoutY="237.0" mnemonicParsing="false"
                onAction="#moveToRecovery" style="-fx-background-color: #F5F5F5;" text="Forgot password?"
                textAlignment="CENTER" textFill="#b5b4b4" underline="true">
            <font>
                <Font name="Comic Sans MS" size="10.0"/>
            </font>
        </Button>
        <Button fx:id="guestButton" layoutX="642.0" layoutY="277.0" mnemonicParsing="false"
                onAction="#moveToAfterLogin" prefHeight="34.0" prefWidth="65.0"
                style="-fx-background-color: #F5F5F5#F5F5F5;" text="Guest" textAlignment="CENTER">
            <font>
                <Font name="Comic Sans MS" size="16.0"/>
            </font>
        </Button>
    </AnchorPane>
    <Label alignment="CENTER" layoutX="92.0" layoutY="14.0" prefHeight="78.0" prefWidth="517.0"
           text="Quotes From Teachers" textFill="WHITESMOKE">
        <font>
            <Font name="Comic Sans MS" size="48.0"/>
        </font>
    </Label>
    <Button fx:id="singUpButton" layoutX="621.0" mnemonicParsing="false" onAction="#moveToRegistration"
            style="-fx-background-color: #F5F5F5#F5F5F5;" text="Sign Up" textAlignment="CENTER">
        <font>
            <Font name="Comic Sans MS" size="16.0"/>
        </font>
    </Button>
</AnchorPane>
